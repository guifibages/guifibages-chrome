{
  "name": "Guifibages",
  "version": "0.4",
  "manifest_version": 2,

  // "default_locale": "ca",
  "description": "Acc√©s a serveis de la xarxa Guifibages.",
  // "icons":,
  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.jpg",
    "default_title": "Guifibages",
    "default_popup": "popup.html"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://guifibages.net/api/*",
    "*://*.guifibages.net/*",
    "proxy",
    "tabs",
    "http://*/*"
  ],
  "content_security_policy": "script-src 'self' https://guifibages.net; object-src 'self'"
}